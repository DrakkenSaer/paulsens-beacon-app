<h1>Historical Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @historical_events.each do |historical_event| %>
      <tr>
        <td><%= historical_event.title %></td>
        <td><%= historical_event.description %></td>
        <td><%= historical_event.date %></td>
        <td><%= link_to 'Show', historical_event %></td>
        <td><%= link_to 'Edit', edit_historical_event_path(historical_event) %></td>
        <td><%= link_to 'Destroy', historical_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

