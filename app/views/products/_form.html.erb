<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </div>

  <div class="field">
    <%= f.label :featured %>
    <%= f.check_box :featured %>
  </div>

  <%= f.fields_for :promotions do |promotions_form| %>

    <div class="field">
      <%= promotions_form.label :id, :promotion_id %>
      <%= promotions_form.select :id, Promotion.all.map { |c| [c.title, c.id] } %>
    </div>

    <div class="field">
      <%= promotions_form.label :cost %>
      <%= promotions_form.text_field :cost %>
    </div>

  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>