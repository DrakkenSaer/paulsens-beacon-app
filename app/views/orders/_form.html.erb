<%= form_for(order) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id, :user %>
    <%= f.select :user_id, @users.map { |c| [c.email, c.id] } %>
  </div>

  <%= f.fields_for :promotions do |promotions_form| %>
    <div class="field">
      <%= promotions_form.label :id, :promotion_id %>
      <%= promotions_form.select :id, @products.map { |c| [c.title, c.id] } %>
    </div>

    <div class="field">
      <%= promotions_form.label :cost %>
      <%= promotions_form.text_field :cost %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
