<h1>Beacons</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Uuid</th>
      <th>Major Uuid</th>
      <th>Minor Uuid</th>
    </tr>
  </thead>

  <tbody>
    <% @beacons.each do |beacon| %>
      <tr>
        <td><%= beacon.title %></td>
        <td><%= beacon.description %></td>
        <td><%= beacon.uuid %></td>
        <td><%= beacon.major_uuid %></td>
        <td><%= beacon.minor_uuid %></td>
        <td><%= link_to 'Show', beacon %></td>
        <td><%= link_to 'Edit', edit_beacon_path(beacon) %></td>
        <td><%= link_to 'Destroy', beacon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beacon', new_beacon_path %>
